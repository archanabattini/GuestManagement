@{
    ViewData["Title"] = "Manage Guest";
}
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-main" role="alert"></div>
    </div>
</div>

<form role="form">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input id="FirstName" type="text" class="form-control" data-bind="value: $root.FirstName" />
                <span id="FirstNameErrors"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input id="LastName" type="text" class="form-control" data-bind="value: $root.LastName" />
                <span id="LastNameErrors"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="Email">Email</label>
                <input id="Email" type="text" class="form-control" data-bind="value: $root.Email" />
                <span id="EmailErrors"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="PhoneNumber">Phone Number</label>
                <input id="PhoneNumber" type="text" class="form-control" data-bind="value: $root.PhoneNumber" />
                <span id="PhoneNumberErrors"></span>
            </div>
        </div>
    </div>
</form>
   <div class="row">
    <div class="col-lg-12">
        <input type="button" id="btnSubmit" class="btn btn-success" value="Submit" data-bind="click: $root.manage" />
        <input type="button" id="btnCancel" class="btn btn-danger" value="Cancel" data-bind="click: $root.cancel" />
    </div>
</div>
<div class="overlay"></div>
<div class="spanner">
    <div class="loader"></div>
    <p>Adding new guest. Please wait...</p>
</div>
<div class="spanner2">
    <div class="loader"></div>
    <p>Updating guest. Please wait...</p>
</div>

